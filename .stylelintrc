{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-empty-line-before": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "else",
          "include",
          "mixin",
          "return"
        ]
      }
    ],
    "selector-type-no-unknown": [
      true,
      {
        "ignore": [
          "custom-elements"
        ]
      }
    ],
    "unit-allowed-list": [
      "rem",
      "%",
      "s",
      "vh",
      "vw"
    ]
  }
}
